<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="heading">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="heading_primary" parent="heading">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="heading_secondary" parent="heading">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="heading_tertiary" parent="heading">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="rounded_button_colored">
        <item name="cornerRadius">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="rounded_button_peach" parent="rounded_button_colored">
        <item name="backgroundTint">@color/peach</item>
        <item name="rippleColor">@color/peach_dark</item>
    </style>
    <style name="rounded_button_blue" parent="rounded_button_colored">
        <item name="backgroundTint">@color/blue_secondary</item>
        <item name="rippleColor">@color/blue_secondary_dark</item>
    </style>
</resources>